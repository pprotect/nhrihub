@import 'theme';

.navbar {
  border: none;
  background-color: $banner_bg;
}

.container-fluid {
  background-color: $banner_bg;
  padding-left: 0px;
  padding-right: 0px;
}

// active
.navbar-default .navbar-nav > .active > a:hover, .navbar-default .navbar-nav > .active > a:focus {
  background-color: $nav_active;
  color : $nav_text;
}

.navbar-default .navbar-nav > .active > a {
  background-color: $nav_active;
  background-image: none; // b/c bootstrap has a gradient image that the background-color here cannot override
  color : $nav_text;
}

// Normal
.navbar-default .navbar-nav > li > a, .navbar-default .navbar-nav > li > a {
  color : $nav_text;
}

// hover
.navbar-default .navbar-nav > li > a:hover, .navbar-default .navbar-nav > li > a:focus {
  background-color: $nav_hover;
  color : $nav_text;
}

//menu open
.navbar-default .navbar-nav > .open > a,
.navbar-default .navbar-nav > .open > a:hover,
.navbar-default .navbar-nav > .open > a:focus {
  background-color: $nav_hover;
  color : $nav_text;
}

// show dropdown menu on hover of menu item
.nav .dropdown:hover>.dropdown-menu {
  display: block;
}

#main {
  font-family:sans-serif;
  font-size:46px;
  font-weight: bold;
  color: $banner_main_text;
  text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.75);
}

#sub { 
  font-family: times;
  font-size:24px;
  color: $banner_sub_text;
  text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
}

//override the style from the simple-navigation-bootstrap gem
//as it duplicates bootstrap's own caret
a.dropdown-toggle>b.caret { display : none; }
