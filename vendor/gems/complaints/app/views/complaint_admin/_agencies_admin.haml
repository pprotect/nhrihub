%script#local_agencies_province_template{type: 'ractive/template'}
  .panel.panel-default
    .row.agencies.panel-heading#secondary_accordion_panel
      .col-md-4.text {{province_name}}
      .col-md-2
        %a{"data-parent" => "#local_secondary_accordion", "data-toggle" => "collapse", :href => "#local_provinces_accordion_{{province_name.underscore()}}"}
          %i.fa.fa-caret-right{'data-toggle'=>:tooltip, :title=>'show offices'}
    .panel-collapse.collapse{id: "local_provinces_accordion_{{province_name.underscore()}}"}
      .panel-body
        .panel-group{id: "local_provinces_{{province_name.underscore()}}"}
          .panel.panel-default
            .row.agencies.panel-heading#province_metro_panel
              .col-md-4.text Metropolitan Municipalities
              .col-md-2
                %a{"data-parent" => '#local_provinces_{{province_name.underscore()}}', "data-toggle" => "collapse", :href => '#{{province_name.underscore()}}_metropolitan'}
                  %i.fa.fa-caret-right{'data-toggle'=>:tooltip, :title=>'show offices'}
            .panel-collapse.collapse{id: "{{province_name.underscore()}}_metropolitan"}
              .panel-body
                <metroMunicipalities province_id='{{id}}' type='MetropolitanMunicipality' collection='{{metro_collection}}' />

          .panel.panel-default
            .row.agencies.panel-heading#province_districts_panel
              .col-md-4.text District Municipalities
              .col-md-2
                %a{"data-parent" => '#local_provinces_{{province_name.underscore()}}', "data-toggle" => "collapse", :href => '#{{province_name.underscore()}}_districts_accordion'}
                  %i.fa.fa-caret-right{'data-toggle'=>:tooltip, :title=>'show offices'}
            .panel-collapse.collapse{id: "{{province_name.underscore()}}_districts_accordion"}
              .panel-body
                .panel-group{id: "{{province_name.underscore()}}_districts"}
                  <districts province_name='{{province_name.underscore()}}' collection='{{district_collection}}' />

%script#metro_municipalities_template{type: 'ractive/template'}
