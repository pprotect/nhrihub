div#buttons("data-toggle" = "edit", 'class-hidden'='intake')
  .edit(style = "text-align:center", 'class-hidden'='new_complaint')
    #edit_cancel.btn.btn-danger.btn-sm.edit_cancel
      i.fa.fa-remove.fa-lg
      span(style = "color:white") {{ t.cancel }}
  .edit(style = "text-align:center")
    .btn.btn-success.btn-sm#save_complaint("on-click" = "@this.save_complaint()", 'class-hidden'='update_complaint')
      i.fa.fa-check.fa-lg
      span {{ t.save }}
    .btn.btn-success.btn-sm#edit_save('class-hidden'='new_complaint')
      i.fa.fa-check.fa-lg
      span {{ t.save }}
    .form-group("class-has-error" = "has_errors")
      span#complaint_error.help-block.error {{ t.form_error }}
div#buttons("data-toggle" = "edit", 'class-hidden'='register')
  .edit
    .btn.btn-success.btn-sm#check_dupes("on-click" = "@this.check_dupes()")
      i.fa.fa-check.fa-lg
      span {{ t.check_dupes }}
  .edit
    .btn.btn-success.btn-sm#proceed_to_intake("on-click" = "@this.proceed_to_intake()")
      i.fa.fa-check.fa-lg
      span {{ t.proceed_to_intake }}
  .edit
    .btn.btn-success.btn-sm#save_complaint("on-click" = "@this.save_complaint()", 'class-hidden'='update_complaint')
      i.fa.fa-check.fa-lg
      span {{ t.save }}
    .form-group#form_error("class-has-error" = "has_errors")
      span#complaint_error.help-block.error {{ t.form_error }}

style.
  #buttons {
    display:flex;
    justify-content:space-evenly;
    margin-top: 30px;
  }
  #buttons .edit {
    width: 230px;
    text-align: center;
  }
