.modal.fade#documents_modal(role = 'dialog')
  .modal-dialog.modal-lg(role = 'document')
    .modal-content
      .modal-header
        button.close(type="button", data-dismiss='modal')
          span &times
        h4.modal-title#myModalLabel
          | {{ t.documents }}
      .modal-body
        <attachedDocuments parent_type='{{parent_type}}' parent='{{parent}}' attached_documents='{{attached_documents}}' key='communication_document'>
      .modal-footer

script(type='text/javascript').
  //import Ractive from 'ractive'
  import translations from 'translations.js'
  import AttachedDocuments from '../../../../../../app/javascript/attached_documents'

  export default new Ractive({
    el : '#documents',
    template : $TEMPLATE,
    components : {
      attachedDocuments : AttachedDocuments
    },
    showModal(){
      return $(this.find('#documents_modal')).modal('show');
    },
    data : function(){ return {
      t : translations.t('documents')
    }},
  });
