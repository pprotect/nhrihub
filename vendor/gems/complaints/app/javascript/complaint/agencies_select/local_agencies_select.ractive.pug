select.dupe_check.form-control#provinces_select(value='{{agency_select_params.selected_province_id}}')
  option#prompt(value='0', disabled=true, selected=true) select province...
  | {{#provinces}}
  option(value='{{id}}') {{name}}
  | {{/provinces}}
.tertiary('class-show'='province_is_selected')
  <districtSelect agency_select_params='{{agency_select_params}}' tertiary_key='{{tertiary_key}}' province_districts='{{province_districts}}' province_metro='{{province_metro}}' />

style.
  .tertiary { display: none; }
  .tertiary.show{ display: flex !important; }
  #provinces_select {
    width: 140px;
  }
  option#prompt {
    color: #333;
  }

script.
  import DistrictSelect from './district_select.ractive.pug'

  export default Ractive.extend({
    template : $TEMPLATE,
    css: $CSS,
    components: {
      districtSelect: DistrictSelect,
    },
    computed:{
      province_districts(){
        return this.get('districts')[this.get('agency_select_params.selected_province_id')]
      },
      province_metro(){
        return this.get('metro_municipalities')[this.get('agency_select_params.selected_province_id')]
      },
      province_is_selected(){
        var sel = this.get('agency_select_params.selected_province_id')
        return !_.isUndefined(sel) && (sel != "0")
      },
      selected_province(){
        return _(this.get('provinces')).findWhere({id: this.get('agency_select_params.selected_province_id')})
      },
      tertiary_key(){
        if(this.get('province_is_selected')){
          return this.get('selected_province').name.underscore()
        }
      },
      agency_id:{
        get(){
          if(this.get('province_is_selected')){
              return this.findComponent('districtSelect').get('agency_id')
            }
        },
        set(val){
          if(this.get('province_is_selected')){
            this.findComponent('districtSelect').set('agency_id',val)
            }
        }
      },
    },
  })
