form
  | {{#all_mandates}}
  .col-md-2(style = "padding-top:0;")
    label(style="font-weight: 400" for="{{key}}")
      | {{ name }}
  .col-md-1.mandate(style = "padding-top:0;")
    input(type = 'radio', name = '{{mandate_id}}', value = '{{ id }}', 'on-change'='@this.remove_error()', id = '{{key}}')
  |  {{/all_mandates}}

script.
  export default Ractive.extend({
    template : $TEMPLATE,
    remove_error() {
      if (this.parent.get('mandate_id') !== 0) {
        return this.parent.remove_attribute_error('mandate_id');
      }
    },
    data(){ return {} },
  });
