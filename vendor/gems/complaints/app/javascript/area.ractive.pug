.area
  .name {{ name }}
  .subareas.comma-list
    | {{#subarea_ids:i}}
    | <subarea subareas='{{subareas}}' area_id='{{area_id}}' id={{subarea_ids[i]}}>
    | {{/subarea_ids}}

script.
  import Subarea from './subarea'

  export default Ractive.extend({
    template : $TEMPLATE,
    components: {
      subarea: Subarea
    },
    computed : {
      name : function(){
        return _(this.get('areas')).findWhere({id : this.get('id')}).name
        }
      }
  })
