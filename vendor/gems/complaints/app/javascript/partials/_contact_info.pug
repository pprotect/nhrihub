.row.form-group('class-has-error' = 'email_error', 'data-toggle' = 'edit')
  .col-md-2
    span.complaint_label {{ context.email }}
  .col-md-6
    .no_edit.in
      span#email {{ email }}
    .edit
      input.form-control.dupe_check#email(name='email', autocomplete='none', value = '{{email}}', 'on-keydown'="@this.remove_attribute_error('email')")
      span.help-block.error#email_error {{ context.email_error_message }}

