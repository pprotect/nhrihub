.row.form-group('class-has-error' = 'agency_ids_error', 'data-toggle'='edit')
  .col-md-2
    label.required {{ t.agency }}
    #add_agency.edit('on-click'='@this.add_agency()')
      .btn.btn-default.btn-success
        i.fa.fa-plus.fa-lg
  .col-md-10
    #agencies.no_edit.in
      | {{#agencies}}
      .agency {{description}}
      | {{/agencies}}
    .edit
      | {{#agencies}}
      <agenciesSelector selection_vector='{{selection_vector}}' metro_municipalities='{{metro_municipalities}}' districts='{{districts}}' provinces='{{provinces}}' agency_tree='{{agency_tree}}' />
      | {{/agencies}}
      span.help-block.error#agency_id_error {{ t.agency_id_error_message }}
