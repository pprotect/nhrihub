.row.form-group('class-has-error' = 'agency_id_error', 'data-toggle'='edit')
  .col-md-2
    label.required {{ t.agency }}
  .col-md-10
    #agencies.no_edit.in
      | {{#agency_ids}}
      <agency agency_id='{{.}}' />
      | {{/agency_ids}}
    .edit
      | {{#agency_ids}}
      <agenciesSelector selection_vector='{{selection_vector}}' metro_municipalities='{{metro_municipalities}}' districts='{{districts}}' provinces='{{provinces}}' agencies='{{agencies}}' />
      | {{/agency_ids}}
      span.help-block.error#agency_id_error {{ t.agency_id_error_message }}
