li.area_select
  label(on-click='@this.is_clicked()')
    | {{ name }}
    input(type='checkbox' name='{{filter_criteria.area_ids}}' value='{{id}}')
    span.fa.fa-check

style.
  li.area_select [type='checkbox'] {
    position: absolute;
    left: -9999px;
  }
  li.area_select label {
    font-weight: 400;
    cursor: pointer;
  }
  li.area_select [type='checkbox']+span{
    position: absolute;
    right: 15px;
  }
  li.area_select [type='checkbox']:checked+span{
    display: inline-block;
  }
  li.area_select [type='checkbox']:not(:checked)+span{
    display: none;
  }
  li.area_select {
    padding-left: 12px;
  }
  li.area_select:hover, li.subarea:focus {
    background-image: -webkit-linear-gradient(top, #F5F5F5 0%, #e8e8e8 100%);
    background-image: -o-linear-gradient(top, whitesmoke 0%, #e8e8e8 100%);
    background-image: linear-gradient(to bottom, #F5F5F5 0%, #e8e8e8 100%);
    background-repeat: repeat-x;
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#FFF5F5F5', endColorstr='#FFE8E8E8', GradientType=0);
    background-color: #e8e8e8;
    text-decoration: none;
  }


script.
  export default Ractive.extend({
    template: $TEMPLATE,
    css: $CSS,
    is_clicked: function(){
      event.stopPropagation();
    }
  });
