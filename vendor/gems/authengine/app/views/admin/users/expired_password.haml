= message_block :for => :user
%h1= t('.heading')
= form_for :user, :url => admin_change_expired_password_path(@user.password_expiry_token), :method=>:post, :html => {:class => "form-horizontal", :id => :password_reset_form} do |f| 
  .user_info.form-horizontal
    .form-group
      .col-sm-3.control-label{:for => :password}=t('.password')
      .col-sm-4
        = f.password_field :password, :class => 'form-control'
    .form-group
      .col-sm-3.control-label{:for => :password_confirmation}=t('.password_confirmation')
      .col-sm-4
        = f.password_field :password_confirmation, :class => 'form-control'
    .row
      .col-sm-2
        .btn.btn-default.btn-primary#submit{'onclick'=>'submit()'}=t('defaults.submit')

:coffeescript
  @submit = -> $('#password_reset_form').submit()


